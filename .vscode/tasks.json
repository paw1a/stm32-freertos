{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "make -j$(nproc)",
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "make clean",
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Flash",
      "type": "shell",
      "command": "make flash",
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Format",
      "type": "shell",
      "command": "make format",
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
  ]
}
